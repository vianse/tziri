<h1>Listing checkins</h1>

<table>
  <thead>
    <tr>
      <th>Codigo evento</th>
      <th>Nombre</th>
      <th>Puesto</th>
      <th>Correo</th>
      <th>Nombre evento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @checkins.each do |checkin| %>
      <tr>
        <td><%= checkin.codigo_evento %></td>
        <td><%= checkin.nombre %></td>
        <td><%= checkin.puesto %></td>
        <td><%= checkin.correo %></td>
        <td><%= checkin.nombre_evento %></td>
        <td><%= link_to 'Show', checkin %></td>
        <td><%= link_to 'Edit', edit_checkin_path(checkin) %></td>
        <td><%= link_to 'Destroy', checkin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Checkin', new_checkin_path %>
