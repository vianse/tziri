<div class="row">
<div class="panel">
<h6>Sign up</h6>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <%= f.label "Correo Empresarial", :class=> "label" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label "ContraseÃ±a", :class=> "label" %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label "Confirmar password", :class=> "label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div><br>
  <div class="actions">
    <%= f.submit "Sign up",:class => "button button-success button-cons" %>
  </div>
<% end %>


</div>
