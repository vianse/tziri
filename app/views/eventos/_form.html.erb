<div class="row">
  <div class ="panel">
  <%= form_for(@evento) do |f| %>
  <% if @evento.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@evento.errors.count, "error") %> prohibited this evento from being saved:</h2>

      <ul>
      <% @evento.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <h6>Nombre del evento</h6>
    <%= f.text_field :nombre, :name => "name",:placeholder=> "ejemplo: Junta de seguimiento", :required => true %>
  </div>
  <div class="field">
    <h6>CÃ³digo del evento</h6>
    <%= f.text_field :codigo, :name => "code", :value => @codigo, :readonly => "true" %>
  </div>
  <div class="actions">
    <%= f.submit "Crear", :class => "boton" %>
  </div>
<% end %>

</div>
</div>
<div class="row">
<h6 class="a">Mis eventos</h6>
<% if @eventos.nil? %>
<% else %>
<% @eventos.each do |evento| %>
    <div class="twelve columns">
            <ul class="student-card-list initial-list">
                <li class="student-card-list-item">
                  <a class="student-card" href="<%= evento.id %>">
                    <h4 class="student-card-name"><%= evento.nombre %></h4>
                    <span class="student-card-location">Codigo <%= evento.codigo %></span>
                     <span class="student-card-location">Participantes <%= evento.checkins.count %></span>
                     
                  </a>
                </li>
            </ul>
    </div>
<% end %>
<% end %>
</div>
